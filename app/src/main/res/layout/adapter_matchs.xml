<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@drawable/border_grey"

    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="30dp"


    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@drawable/border_green"
        android:gravity="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout3"
        android:id="@+id/greenthingy">


        <TextView
            android:id="@+id/heureMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"

            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dateMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/heureMatch"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heureMatch"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>



        <!--<androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/infoBoxMatches"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
            </androidx.constraintlayout.widget.ConstraintLayout>-->
        <TextView
            android:id="@+id/sportCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins_bold1"
            android:text="@string/sport"

            android:textColor="@color/myblue"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/greenthingy"
            app:layout_constraintTop_toTopOf="@+id/greenthingy" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text=" - "
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/sportCategory"
            app:layout_constraintBottom_toBottomOf="@+id/sportCategory"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/sportCategory" />

        <TextView
            app:layout_constraintTop_toTopOf="@+id/sportCategory"

            android:id="@+id/placesRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textSize="19sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/sportCategory"
            app:layout_constraintStart_toEndOf="@+id/textView5" />

        <TextView
            app:layout_constraintBottom_toBottomOf="@+id/sportCategory"
            app:layout_constraintTop_toTopOf="@+id/sportCategory"
            android:id="@+id/placesMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textSize="19sp"
            app:layout_constraintStart_toEndOf="@+id/placesRes" />
        <TextView
            app:layout_constraintBottom_toBottomOf="@+id/sportCategory"
            app:layout_constraintTop_toTopOf="@+id/sportCategory"
            android:id="@+id/places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:text="Places"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textSize="19sp"
            app:layout_constraintStart_toEndOf="@+id/placesMax" />


        <TextView
            android:id="@+id/terrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"

            android:fontFamily="@font/poppins_extralight"
            android:text="@string/terrain"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/prix"
            app:layout_constraintStart_toStartOf="@id/sportCategory"
            app:layout_constraintTop_toBottomOf="@+id/sportCategory" />


        <TextView
            android:id="@+id/prix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_extralight"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/btnRejoindre"
            app:layout_constraintStart_toStartOf="@+id/terrain"
            app:layout_constraintTop_toBottomOf="@+id/terrain" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/textview1"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:fontFamily="@font/poppins_extralight"
            android:text=" - "
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/prix"
            app:layout_constraintStart_toEndOf="@+id/prix"
            app:layout_constraintTop_toTopOf="@+id/prix" />

         <TextView
             android:textColor="@color/black"
             android:id="@+id/duree"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintBottom_toBottomOf="@+id/prix"
             app:layout_constraintStart_toEndOf="@+id/textview1"
             app:layout_constraintTop_toTopOf="@+id/prix"
             android:layout_below="@id/terrain"
             android:fontFamily="@font/poppins_extralight"

             android:textSize="20sp" />


        <Button
            android:id="@+id/btnRejoindre"
            android:layout_width="116dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/myblue"
            android:bottomLeftRadius="16dp"
            android:bottomRightRadius="16dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Rejoindre"
            android:textAllCaps="true"
            android:textSize="9dp"
            android:topLeftRadius="16dp"
            android:topRightRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        </Button>


    </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



